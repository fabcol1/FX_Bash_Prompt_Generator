<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.util.* ?>
<?import javafx.scene.*?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.layout.* ?>
<?import javafx.scene.paint.Color?>
<?import java.net.URL?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.ComboBox?>

<VBox prefHeight="650.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="bash_prompt_gen.BashPromptGeneratorController">
	<children>
		<VBox prefWidth="600.0">
			<children>
				<HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="600.0">
					<children>
						<Label styleClass="myLabel" text="%labelPreview">
							<HBox.margin>
								<Insets top="10.0" />
							</HBox.margin>
							<padding>
								<Insets left="10.0" />
							</padding>
						</Label>
					</children>
				</HBox>
				<Separator prefWidth="200.0">
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</Separator>
				<HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="600.0">
					<children>
						<ComboBox fx:id="fontComboBox" styleClass="MycolorPicker" prefWidth="150.0"
								onAction="#handleFontPickerPreview">
							<HBox.margin>
								<Insets bottom="1.0" top="2.5" right="10.0"/>
							</HBox.margin>
						</ComboBox>
						<Spinner fx:id="spinner" styleClass="MySpinner" prefWidth="70.0">
							<HBox.margin>
								<Insets bottom="1.0" top="2.5" right="10.0"/>
							</HBox.margin>
							      <valueFactory>
        							<SpinnerValueFactory.IntegerSpinnerValueFactory min="5" max="48" initialValue="30" />
      							  </valueFactory>
						</Spinner>
						<ColorPicker styleClass="MycolorPicker" onAction="#handleColorPickerPreview">
							<HBox.margin>
								<Insets bottom="1.0" top="2.5" right="10.0"/>
							</HBox.margin>
							<value>
								<Color red="1.0" green="1.0" blue="1.0" />
							</value>
						</ColorPicker>
					</children>
				</HBox>
				<HBox alignment="CENTER" prefHeight="63.0" prefWidth="596.0">
					<padding>
						<Insets top="10.0" />
					</padding>
					<children>
						<TextFlow fx:id="previewTextFlow" prefHeight="54.0"
							prefWidth="568.0" disable="true" />
					</children>
				</HBox>
				<HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="600.0">
					<children>
						<Label styleClass="myLabel" text="%labelElements">
							<HBox.margin>
								<Insets top="10.0" />
							</HBox.margin>
							<padding>
								<Insets left="10.0" />
							</padding>
						</Label>
					</children>
				</HBox>
				<Separator prefWidth="200.0">
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</Separator>
				<HBox alignment="CENTER" prefHeight="244.0" prefWidth="600.0">
					<children>
						<GridPane prefHeight="236.0" prefWidth="282.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="100.0" />
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
							</rowConstraints>
						</GridPane>
					</children>
				</HBox>
				<HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="600.0">
					<children>
						<Label styleClass="myLabel" text="%labelBashrc">
							<HBox.margin>
								<Insets top="10.0" />
							</HBox.margin>
							<padding>
								<Insets left="10.0" />
							</padding>
						</Label>
					</children>
				</HBox>
				<Separator prefWidth="200.0">
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</Separator>
				<HBox alignment="CENTER" prefHeight="190.0" prefWidth="600.0">
					<padding>
						<Insets top="10.0" />
					</padding>
					<children>
						<TextArea styleClass="bashrc" prefHeight="220.0"
							prefWidth="566.0" editable="false" />
					</children>
				</HBox>
			</children>
		</VBox>
	</children>

	<stylesheets>
		<URL value="@BashPromptGenerator.css" />
	</stylesheets>

</VBox>