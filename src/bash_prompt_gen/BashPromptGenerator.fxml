<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.text.TextFlow?>

<VBox prefHeight="650.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="bash_prompt_gen.BashPromptGeneratorController">
	<children>
		<VBox prefWidth="600.0">
			<children>
				<HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="600.0">
					<children>
						<Label styleClass="myLabel" text="%labelPreview">
							<HBox.margin>
								<Insets right="358.0" top="10.0" />
							</HBox.margin>
							<padding>
								<Insets left="10.0" />
							</padding>
						</Label>
						<ColorPicker styleClass="MycolorPicker" onAction="#handleColorPickerPreview" > 
							<HBox.margin>
								<Insets bottom="2.5" top="2.5"/>
							</HBox.margin>
							<value>
								<Color red="0.0" green="0.0" blue="0.0"/>
							</value>
						</ColorPicker>
					</children>
				</HBox>
				<Separator prefWidth="200.0">
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</Separator>
				<HBox alignment="CENTER" prefHeight="63.0" prefWidth="596.0">
					<padding>
						<Insets top="10.0" />
					</padding>
					<children>
						<TextFlow fx:id="previewTextFlow" prefHeight="54.0" prefWidth="568.0" disable="true" />
					</children>
				</HBox>
				<HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="600.0">
					<children>
						<Label styleClass="myLabel" text="%labelElements">
							<HBox.margin>
								<Insets top="10.0" />
							</HBox.margin>
							<padding>
								<Insets left="10.0" />
							</padding>
						</Label>
					</children>
				</HBox>
				<Separator prefWidth="200.0">
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</Separator>
				<HBox alignment="CENTER" prefHeight="244.0" prefWidth="600.0">
					<children>
						<GridPane prefHeight="236.0" prefWidth="282.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="100.0" />
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
							</rowConstraints>
						</GridPane>
					</children>
				</HBox>
				<HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="600.0">
					<children>
						<Label styleClass="myLabel" text="%labelBashrc">
							<HBox.margin>
								<Insets top="10.0" />
							</HBox.margin>
							<padding>
								<Insets left="10.0" />
							</padding>
						</Label>
					</children>
				</HBox>
				<Separator prefWidth="200.0">
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</Separator>
				<HBox alignment="CENTER" prefHeight="220.0" prefWidth="600.0">
					<padding>
						<Insets top="10.0" />
					</padding>
					<children>
						<TextArea styleClass="bashrc" prefHeight="220.0" prefWidth="566.0" editable="false" />
					</children>
				</HBox>
			</children>
		</VBox>
	</children>

	<stylesheets>
		<URL value="@BashPromptGenerator.css" />
	</stylesheets>

</VBox>